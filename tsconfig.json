{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build",
        "sourceRoot": "./src",
        "sourceMap": true,
        "removeComments": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "exclude": [
        "./build/*",
        "./node_modules/*"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}